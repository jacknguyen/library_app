<h1>New book</h1>

<p id="notice"><%= notice %></p>

<%= form_for @books do |f| %>

	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :publication_year %><br />
		<%= f.text_field :publication_year %>
	</p>
	<p>
		<%= f.label :ISBN %><br />
		<%= f.text_field :ISBN %>
	</p>
	<p>
		<%= f.label :genre %><br />
		<%= f.text_field :genre %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>

<%= link_to "Back", books_path %>